# Docker environment variables for development
# Copy this file to .env to use with docker-compose

# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/grundschule_timetabler

# Valkey (Redis alternative)
VALKEY_URL=redis://valkey:6379/0

# Security
SECRET_KEY=development-secret-key-change-in-production

# CORS
FRONTEND_URL=http://localhost:5173

# Environment
ENVIRONMENT=development

# Logging
LOG_LEVEL=DEBUG

# Email (Mailhog)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@grundschule.local
SMTP_TLS=false
SMTP_SSL=false

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=Grundschule Timetabler
VERSION=0.1.0

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
